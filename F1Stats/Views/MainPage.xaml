<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1Stats.MainPage">
    <ScrollView>

        <HorizontalStackLayout>

            <Image
                Source="second_logo.png"    
                VerticalOptions="Start"
                HeightRequest="100"
                WidthRequest="200"/>

            <Button            
            Text="Drivers"
            Clicked="OnClickedGoDrivers"
            HeightRequest="300"
            WidthRequest="300"/>
            <Button
            Text="Driver Standings"
            HeightRequest="300"
            WidthRequest="300"/>

            <Button
            Text="Schedule"
            HeightRequest="300"
            WidthRequest="300"/>
            <Button
            Text="Constructors"
            HeightRequest="300"
            WidthRequest="300"/>
            <Button
            Text="Constructor Standings"
            HeightRequest="300"
            WidthRequest="300"/>





        </HorizontalStackLayout>
    </ScrollView>










</ContentPage>


