<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1Stats.MainPage"
             BackgroundColor="Grey">
    <ScrollView>

        <HorizontalStackLayout>

            <Image
                Source="second_logo.png"    
                VerticalOptions="Start"
                HeightRequest="100"
                WidthRequest="200"/>

            <ImageButton            
            Source="drivers2.png"
            Clicked="OnClickedGoDrivers"
            HeightRequest="300"
            WidthRequest="300"/>
            
            <Button
                Text="Driver Standings"
                Clicked="OnClickedGoDriverStandings"
                HeightRequest="300"
                WidthRequest="300"/>

            <Button
            Text="Schedule (Currently Not Working)"
            HeightRequest="300"
            WidthRequest="300"/>
            <ImageButton
                Source="constructors.png"
                Clicked="OnClickedGoConstructors"
                HeightRequest="300"
                WidthRequest="300"/>
            <Button
                Text="Constructor Standings"
                Clicked="OnClickedGoConstructorStandings"
                HeightRequest="300"
                WidthRequest="300"/>





        </HorizontalStackLayout>
    </ScrollView>










</ContentPage>


